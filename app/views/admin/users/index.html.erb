<div class="row page-titles">
	<div class="col-md-5 col-8 align-self-center">
		<h3 class="text-themecolor">Sevan</h3>
		<ol class="breadcrumb">
		<li class="breadcrumb-item"><a href="<%= root_path %>">Admin</a></li>
		<li> &nbsp; - Users</li>
		</ol>
	</div>
</div>

<div class="row">
	<div class="col-lg-12 col-xlg-6 m-b-30">
		<a class="btn btn-outline-info" href="<%= new_admin_user_path %>"><i class="fa fa-plus"></i> Add new</a>
	</div>	
</div>

<div class="row">
	<% if @users.present? %>
		<% @users.each do |user| %>
			<div class="col-lg-6 col-md-6">
				<a href="<%= admin_user_path(user) %>">
					<div class="card">
					<div class="card-body">
					<div class="d-flex flex-row">
					<div class="round round-lg align-self-center round-info">
						<i class="fa fa-address-card"></i>
					</div>
					<div class="m-l-10 align-self-center">
						<h3 class="m-b-0 font-light"><%= user.email %></h3>
						<h5 class="text-muted m-b-0">Role: <%= user.role_name %></h5>
						<h5 class="text-muted m-b-0"><%# user.address1 %></h5>
					</div>
					</div>
				</div>
				</div>
			</a>
			</div>
		<% end %>
	<% else %>
		<div class="col-md-12 col-sm-12">
			<div class="alert alert-info" style="width: 100%">
				<button type="button" class="close" data-dismiss="alert" aria-label="Close">
						<span aria-hidden="true">Ã—</span>
				</button>
				<h3 class="text-info">
					<i class="fa fa-exclamation-circle"></i> Information
				</h3> 
				There are no users created yet on this app, please go and create some.
			</div>
		</div>
	<% end %>
</div>

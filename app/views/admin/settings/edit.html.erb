
<div class="modal-header">
	<h4 class="modal-title" id="exampleModalLabel1">Editing Settings</h4>
	<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
</div>

<div class="modal-body">
	<%= form_for(@setting, {url: "/admin/settings/#{@setting.id}/edit", method: :put}) do |form| %>
		<div class="form-group">
			<label for="recipient-name" class="control-label">Name:</label>
			<%= form.text_field :order_number, class: "form-control", required: true %>
		</div>
		<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
		<%= form.submit 'Save', class: "btn btn-danger waves-effect waves-light" %>
	<% end %>
</div>
<div class="row page-titles">
	<div class="col-md-5 col-8 align-self-center">
		<h3 class="text-themecolor">Sevan</h3>
		<ol class="breadcrumb">
	  	<li class="breadcrumb-item"><a href="<%= list_vendors_path %>">Vendors</a></li>
	    <li class="breadcrumb-item active"><%= @vendor.name %></li>
	  </ol>
	</div>
</div>

<div class="row">
	<div class="col-md-12 col-sm-12">
		<h1 class="text-info"><%= @vendor.name %></h1>
	</div>
	<div class="col-md-4 col-sm-12">
		<label class="font-weight-bold">State: </label> <%= @vendor.state %>

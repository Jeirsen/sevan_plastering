                    <span aria-hidden="true">Ã—</span>\
                    </button>';
          $("#product_alert").append(message);
          $("#product_alert").show();
          setTimeout(function(){
            $("#product_alert").hide();
            $("#newProduct").modal('hide');
          },5000);
        }else{
          $("#product_alert").empty();
          $("#product_alert").removeClass("alert-success");
          $("#product_alert").addClass("alert-danger");
          message = data.data + '<button type="button" class="close" data-dismiss="alert" aria-label="Close">\
                    <span aria-hidden="true">Ã—</span>\
                    </button>';
          $("#product_alert").append(message);
          $("#product_alert").show();
          setTimeout(function(){
            $("#product_alert").hide();
          },5000);
        }
      },
      error: function (data) {
        $("#product_alert").empty();
        $("#product_alert").removeClass("alert-success");
        $("#product_alert").addClass("alert-danger");
        message = data.data + '<button type="button" class="close" data-dismiss="alert" aria-label="Close">\
                  <span aria-hidden="true">Ã—</span>\
                  </button>';
        $("#product_alert").append(message);
        $("#product_alert").show();
        setTimeout(function(){
          $("#product_alert").hide();
        },5000);
      }
    })
  }
}

function validateProductData(){
  product_name = $.trim($("#product_name").val());
  unit_id = $("#select_unit").val();
  category = $("#select_category").val();
  error = false;

  if(product_name.length === 0)
  { 
    $("#danger_name").show();
    setTimeout(function(){
        $('#danger_name').hide();
    },5000);
    error = true;
  }

  if(unit_id === "")
  { 
    $("#danger_unit").show();
    setTimeout(function(){
        $('#danger_unit').hide();
    },5000);
    error = true;
  }

  if(category === "")
  { 
    $("#danger_category").show();
    setTimeout(function(){
        $('#danger_category').hide();
    },5000);
    error = true;
  }

  return error;
}


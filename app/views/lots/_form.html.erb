<%= form_with(model: lot, local: true) do |form| %>
  <% if lot.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(lot.errors.count, "error") %> prohibited this lot from being saved:</h2>

      <ul>
      <% lot.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :project_id, id: :lot_project_id %>

  <div class="form-group">
    <label for="recipient-name" class="control-label">Model:</label>
    <%= form.select :model_id, options_for_select(@models.map { |e| [e.name,e.id] }, lot.model_id),{}, {:multiple => false, :class => 'form-control select2', style: "width:100% !important", id: "model_lot"} %>
    <span class="label label-danger" style="display: none" id="danger_builder">Model is required!</span>
  </div>


  <div class="form-group">
    <label for="recipient-name" class="control-label">Number:</label>
    <%= form.text_field :number, id: :lot_number, class: "form-control", id: "number_lot" %>
    <span class="label label-danger" style="display: none" id="danger_name">Number is required!</span>
  </div>

  <div class="form-group">
    <label for="recipient-name" class="control-label">Address 1:</label>
    <%= form.text_field :address1, id: :lot_address1, class: "form-control", id: "address1_lot" %>
    <span class="label label-danger" style="display: none" id="danger_name">Address 1 is required!</span>
  </div>

  <div class="form-group">
    <label for="recipient-name" class="control-label">Address 2:</label>
    <%= form.text_field :address2, id: :lot_address2, class: "form-control", id: "address2_lot" %>
    <span class="label label-danger" style="display: none" id="danger_name">Address 2 is required!</span>
  </div>

  <div class="row">
    <div class="form-group col-lg-4">
      <label for="recipient-name" class="control-label">City:</label>
      <%= form.text_field :city, id: :lot_city, class: "form-control", id: "city_lot" %>
      <span class="label label-danger" style="display: none" id="danger_name">City is required!</span>
    </div>

    <div class="form-group col-lg-4">
      <label for="recipient-name" class="control-label">State:</label>
      <%= form.text_field :state, id: :lot_state, class: "form-control", id: "state_lot" %>
      <span class="label label-danger" style="display: none" id="danger_name">City is required!</span>
    </div>

    <div class="form-group col-lg-4">
      <label for="recipient-name" class="control-label">ZIP:</label>
      <%= form.text_field :zip, id: :lot_zip, class: "form-control", id: "zip_lot" %>
      <span class="label label-danger" style="display: none" id="danger_name">City is required!</span>
    </div>
  </div>


  <div class="actions">
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    <%= form.submit 'Save', class: "btn btn-danger waves-effect waves-light" %>  </div>
<% end %>

